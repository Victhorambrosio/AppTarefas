@model AppTarefas.Models.Tarefa
@{
	ViewData["Title"] = "Cadastro de Tarefas";
}

<h1>Nova Tarefa</h1>
<form asp-action="Create" method="post">
	<div class="form-group mb-3">
		<label>Título</label>
		<input asp-for="Titulo" class="form-control" />
	</div>

	<div class="form-group mb-3">
		<label>Descrição</label>
		<textarea asp-for="Descricao" class="form-control"></textarea>
	</div>

	<button type="submit" class="btn btn-success px-3">Salvar</button>

	<a asp-controller="Tarefas" asp-action="Index" class="btn btn-secondary px-3">Voltar</a>

</form>